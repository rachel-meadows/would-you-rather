<div class="wrapper">
  <img src="/img/background.gif" class="background background--faded">
  <h1>Add your own question:</h1>

  <div class="form">
    <form method="POST" class="form" action="/add/submit">
      {{!-- The two options for a question --}}
      <div class="form__choices">
        <div class="form__radio-container">
          <label for="option1" class="form__title">Option 1: </label>
          <input id="option1" type="text" name="option1" required>
        </div>
        <div class="form__radio-container">
          <label for="option2" class="form__title">Option 2: </label>
          <input id="option2" type="text" name="option2" required>
        </div>
      </div>
        <input type="hidden" name="userId" value="{{ userId }}">
      <input class="form__submit" type="submit"  value="Add!">
    </div>
  </form> 

</div>