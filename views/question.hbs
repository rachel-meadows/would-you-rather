<div class="wrapper">
  <img src="/img/background.gif" class="background background--faded">
  <div class="question">
  <h1>Would you rather:</h1>
  <form method="POST" class="form" action="/results" method="POST">
    {{!-- The two options for a question --}}
    <div class="form__choices">
      <div class="form__radio-container">
        <input id="option1" type="radio" name="choice" value="1" required>
        <label for="option1" class="form__title">{{ question.option1 }}</label>
      </div>
      <div class="form__radio-container">
        <input id="option2" type="radio" name="choice" value="2">
        <label for="option2" class="form__title">{{ question.option2 }}</label>
      </div>
    </div>

    {{!-- The current user --}}
    <input type="hidden" name="userId" value="{{ user }}">
    {{!-- The current question --}}
    <input type="hidden" name="questionId" value="{{ question.id }}">

    <input class="form__submit" type="submit"  value="Choose!">
  </form>
  </div>
</div>
