<div class="wrapper wrapper__results">
  <img src="/img/background.gif" class="background background--faded">
  <h1>Results</h1>

  <p>{{ user }}, you chose <em>'{{ userChoice }}'</em>.</p>
  <p><strong>{{ percentAgreeWithUser }}%</strong> of people agree with you.</p>
  <p><strong>{{ percentDisagreeWithUser }}%</strong> of people disagree with you.</p>
  <p>{{ option1Count }} people chose <em>'{{ option1 }}'</em>.</p>
  <p>{{ option2Count }} people chose <em>'{{ option2 }}'</em>.</p>

  <h2>People who agree with you:</h2>
  <ul>
    {{#each agreeUserNames }}<li>{{ this }} </li>{{/each}}
  </ul>

  <div class="back-next">
    {{#if showBack}}
      <form method="POST" action="/back">
        {{!-- The current user --}}
        <input type="hidden" name="userId" value="{{ userId }}">
        {{!-- The current question --}}
        <input type="hidden" name="questionId" value="{{ questionId }}">
        <button type="submit" class="back-next__button">Back</button>
      </form>
    {{/if}}

    {{#if showNext}}
      <form method="POST" action="/next">
        {{!-- The current user --}}
        <input type="hidden" name="userId" value="{{ userId }}">
        {{!-- The current question --}}
        <input type="hidden" name="questionId" value="{{ questionId }}">
        <button type="submit" class="back-next__button">Next</button>
      </form>
    {{/if}}

  </div>

</div>